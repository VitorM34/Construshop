<% content_for :title, "Editar Produto" %>

<h1 class="text-2xl font-bold mb-4 text-center">Editar Produto</h1>

<% if @produto.imagem.attached? %>
  <div class="mt-4 text-center">
    <%= image_tag url_for(@produto.imagem), class: "mx-auto max-w-[300px] max-h-[300px] object-contain rounded-lg shadow " %>
  </div>
<% end %>

<div class="mt-6 flex flex-col ">
  <%= render "form", produto: @produto %>
</div>

<div class="mt-6 flex flex-col gap-2">
  <%= link_to "Visualizar Produto", @produto, class: "text-blue-600 hover:underline" %>
  <%= link_to "Voltar para Produtos", produtos_path, class: "text-gray-600 hover:underline" %>
</div>